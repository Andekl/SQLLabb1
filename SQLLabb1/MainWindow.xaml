<Window x:Class="SQLLabb1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLLabb1"
        mc:Ignorable="d"
        Title="MainWindow" Height="517.308" Width="730.128">
    <Grid>
        <ListBox x:Name="AuthorListBox" HorizontalAlignment="Left" Height="173" Margin="76,21,0,0" VerticalAlignment="Top" Width="240" SelectionChanged="AuthorListBox_SelectionChanged" IsSynchronizedWithCurrentItem="False" DisplayMemberPath="Name"/>
        <ListBox x:Name="BookListBox" HorizontalAlignment="Left" Height="173" Margin="409,21,0,0" VerticalAlignment="Top" Width="240" SelectionChanged="BookListBox_SelectionChanged" DisplayMemberPath="Title"/>
        <TextBox x:Name="IdTextBox" HorizontalAlignment="Left" Height="31" Margin="76,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" IsEnabled="False"/>
        <TextBox x:Name="BookIdTextBox" HorizontalAlignment="Left" Height="31" Margin="409,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" IsEnabled="False"/>
        <Button x:Name="SaveChangesButton" Content="SAVE AUTHOR&#xD;&#xA;CHANGES" HorizontalAlignment="Left" Margin="125,370,0,0" VerticalAlignment="Top" Width="113" Height="50" Click="SaveChangesButton_Click" IsEnabled="False"/>
        <Button x:Name="AddAuthorButton" Content="ADD AUTHOR" HorizontalAlignment="Left" Margin="62,428,0,0" VerticalAlignment="Top" Width="109" Height="50" Click="AddAuthorButton_Click" IsEnabled="False"/>
        <Button x:Name="DeleteAuthortButton" Content="DELETE AUTHOR" HorizontalAlignment="Left" Margin="188,428,0,0" VerticalAlignment="Top" Width="118" Height="50" Click="DeleteAuthortButton_Click" IsEnabled="False"/>
        <TextBox x:Name="AuthorNameTextBox" HorizontalAlignment="Left" Height="29" Margin="76,276,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" MouseDoubleClick="AuthorNameTextBox_MouseDoubleClick" Text="double cklick to clear textboxes.."/>
        <TextBox x:Name="NationalityTextBox" HorizontalAlignment="Left" Height="30" Margin="76,335,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" MouseDoubleClick="NationalityTextBox_MouseDoubleClick" Text="double cklick to clear textboxes.."/>
        <TextBox x:Name="AuthorIdTextBox" HorizontalAlignment="Left" Height="29" Margin="409,276,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" IsEnabled="False"/>
        <TextBox x:Name="TitleTextBox" HorizontalAlignment="Left" Height="30" Margin="409,335,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" MouseDoubleClick="TitleTextBox_MouseDoubleClick" Text="double cklick to clear textbox.."/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="76,192,0,0" VerticalAlignment="Top" Width="127"/>
        <Label Content="Author name:" HorizontalAlignment="Left" Margin="76,254,0,0" VerticalAlignment="Top" Width="114"/>
        <Label Content="Authors nationality:" HorizontalAlignment="Left" Margin="76,310,0,0" VerticalAlignment="Top" Width="148"/>
        <Label Content="Book ID:" HorizontalAlignment="Left" Margin="409,194,0,0" VerticalAlignment="Top" Width="182"/>
        <Label Content="Author Id number:" HorizontalAlignment="Left" Margin="409,254,0,0" VerticalAlignment="Top" Width="135"/>
        <Label Content="Book title:" HorizontalAlignment="Left" Margin="409,310,0,0" VerticalAlignment="Top" Width="135"/>
        <Button x:Name="SaveChangesBookButton" Content="SAVE BOOK&#xD;&#xA;CHANGES &#xA;" HorizontalAlignment="Left" Margin="472,371,0,0" VerticalAlignment="Top" Width="101" Height="50" Click="SaveChangesBookButton_Click" IsEnabled="False"/>
        <Button x:Name="AddBookButton" Content="ADD BOOK" HorizontalAlignment="Left" Margin="409,428,0,0" VerticalAlignment="Top" Width="110" Height="50" Click="AddBookButton_Click" IsEnabled="False"/>
        <Button x:Name="DeleteBookButton" Content="DELETE BOOK" HorizontalAlignment="Left" Margin="535,428,0,0" VerticalAlignment="Top" Width="114" Height="50" Click="DeleteBookButton_Click" IsEnabled="False"/>

    </Grid>
</Window>
