<Window x:Class="SQLLabb1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLLabb1"
        mc:Ignorable="d"
        Title="MainWindow" Height="517.308" Width="730.128">
    <Grid>
        <ListBox x:Name="AuthorListBox" HorizontalAlignment="Left" Height="173" Margin="76,21,0,0" VerticalAlignment="Top" Width="240" SelectionChanged="AuthorListBox_SelectionChanged" IsSynchronizedWithCurrentItem="False"/>
        <ListBox x:Name="BookListBox" HorizontalAlignment="Left" Height="173" Margin="409,21,0,0" VerticalAlignment="Top" Width="240" SelectionChanged="BookListBox_SelectionChanged"/>
        <TextBox x:Name="IdTextBox" HorizontalAlignment="Left" Height="31" Margin="76,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" GotFocus="IdTextBox_GotFocus" Text="Id key number.."/>
        <TextBox x:Name="BookIdTextBox" HorizontalAlignment="Left" Height="31" Margin="409,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Text="Book Id number..."/>
        <Button x:Name="SaveChangesButton" Content="SAVE CHANGES" HorizontalAlignment="Left" Margin="104,382,0,0" VerticalAlignment="Top" Width="120" Height="60" Click="SaveChangesButton_Click"/>
        <Button x:Name="AddElementButton" Content="ADD ELEMENT" HorizontalAlignment="Left" Margin="298,382,0,0" VerticalAlignment="Top" Width="120" Height="60"/>
        <Button x:Name="DeleteElementButton" Content="DELETE ELEMENT" HorizontalAlignment="Left" Margin="488,382,0,0" VerticalAlignment="Top" Width="120" Height="60"/>
        <TextBox x:Name="AuthorNameTextBox" HorizontalAlignment="Left" Height="29" Margin="76,276,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Text="Author name.."/>
        <TextBox x:Name="NationalityTextBox" HorizontalAlignment="Left" Height="30" Margin="76,335,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Text="Authors nationality.."/>
        <TextBox x:Name="AuthorIdTextBox" HorizontalAlignment="Left" Height="29" Margin="409,276,0,0" TextWrapping="Wrap" Text="Author Id number.." VerticalAlignment="Top" Width="240"/>
        <TextBox x:Name="TitleTextBox" HorizontalAlignment="Left" Height="30" Margin="409,335,0,0" TextWrapping="Wrap" Text="Book title.." VerticalAlignment="Top" Width="240"/>

    </Grid>
</Window>
