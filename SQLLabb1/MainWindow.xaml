        <Label Content="Authors nationality:" HorizontalAlignment="Left" Margin="76,310,0,0" VerticalAlignment="Top" Width="148"/>
        <Label Content="Book ID:" HorizontalAlignment="Left" Margin="409,194,0,0" VerticalAlignment="Top" Width="182"/>
        <Label Content="Author Id number:" HorizontalAlignment="Left" Margin="409,254,0,0" VerticalAlignment="Top" Width="135"/>
        <Label Content="Book title:" HorizontalAlignment="Left" Margin="409,310,0,0" VerticalAlignment="Top" Width="135"/>

    </Grid>
</Window>
